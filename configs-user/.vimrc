" Enable spell checking for Bahasa Indonesia and English
" set spelllang=en,id
set spelllang=en
set spell

" Changing some default variables
set nocompatible
set number
set relativenumber
set softtabstop=4
set shiftwidth=4
set path+=**
set wildmenu
set splitright
set splitbelow

" Changing some default settings
filetype on
filetype plugin on
filetype indent on
syntax enable
