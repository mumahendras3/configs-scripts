#exec --no-startup-id systemctl --user start redshift-gtk.service # Start redshift-gtk
exec --no-startup-id mailspring -b # Start mailspring email client in background

# Set the wallpaper
exec_always --no-startup-id feh --bg-scale ~/Images/Wallpapers/current

# Lock screen with i3lock
bindsym $mod+Shift+x exec --no-startup-id i3lock -t --ignore-empty-password --image=/usr/share/wallpapers/ascii-1920x1080.png

# Disabling touchpad at start
exec --no-startup-id xinput set-prop "Elan Touchpad" "Device Enabled" 0

# Function keys binding
bindsym XF86TouchpadToggle exec --no-startup-id touchpad_toggle
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +2% # increase sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -2% # decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound
bindsym XF86MonBrightnessUp exec --no-startup-id xbacklight -inc 10 # increase screen brightness
bindsym XF86MonBrightnessDown exec --no-startup-id xbacklight -dec 10 # decrease screen brightness

# Additional scripts
bindsym $mod+m exec --no-startup-id mount-media
bindsym $mod+n exec --no-startup-id unmount-media

