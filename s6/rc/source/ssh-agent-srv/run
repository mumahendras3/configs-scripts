#!/bin/execlineb -P

##############################
# Start the ssh-agent daemon #
##############################

fdmove -c 2 1
getcwd CWD
s6-envdir env
multisubstitute {
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
  importas -u CWD CWD
}
if {
  redirfd -w 1 env/SSH_AUTH_SOCK
  echo ${CWD}/s
}
s6-notifyoncheck -dn0 -c "[ -S s ]"
exec -c $CMD $CMD_OPTS
