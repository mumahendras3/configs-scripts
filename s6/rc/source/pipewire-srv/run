#!/bin/execlineb -P

#############################
# Start the pipewire daemon #
#############################

fdmove -c 2 1
# PIPEWIRE_NOTIFICATION_FD was introduced in version 0.3.57
backtick PIPEWIRE_NOTIFICATION_FD { cat notification-fd }
# Adding DBUS_SESSION_BUS_ADDRESS to the environment
s6-envdir ../messagebus-srv/env
s6-envdir env
multisubstitute {
  importas XDG_RUNTIME_DIR XDG_RUNTIME_DIR
  importas -u CMD CMD
  importas -usCd" " CMD_OPTS CMD_OPTS
}
emptyenv -c $CMD $CMD_OPTS
